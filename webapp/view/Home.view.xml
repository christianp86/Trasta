<mvc:View controllerName="com.fidschenberger.wasteStatsApp.controller.Home" displayBlock="true" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.f" xmlns:layout="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc">
	<f:DynamicPage id="dynamicPageId" headerExpanded="true">
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="{i18n>title}" />
				</f:heading>
				<f:expandedContent>
					<Label text="{i18n>appDescription}" />
				</f:expandedContent>
				<f:snappedContent>
					<Label text="{i18n>appDescription}" />
				</f:snappedContent>
				<f:snappedTitleOnMobile>
					<Title text="{i18n>title}" />
				</f:snappedTitleOnMobile>
				<f:content>
					<OverflowToolbar>
						<GenericTag text="{i18n>totalWaste}" status="Warning" press="onGenericTagPress" design="StatusIconHidden">
							<ObjectNumber number="{waste_statistics>/totalWaste}" numberUnit="KG" emphasized="false" state="Warning" />
						</GenericTag>
					</OverflowToolbar>
				</f:content>
				<!-- <f:actions>
					<ToolbarSpacer />
					<Button text="Edit" type="Emphasized" />
					<Button text="Delete" type="Transparent" />
					<Button text="Copy" type="Transparent" />
					<Button icon="sap-icon://action" type="Transparent" />
				</f:actions> -->
			</f:DynamicPageTitle>
		</f:title>
		<!-- DynamicPage Header -->
		<f:header>
			<f:DynamicPageHeader pinnable="true">
				<layout:HorizontalLayout allowWrapping="true" class="sapUiResponsiveContentPadding">
					<Input id="inputWasteWeight" type="Number" value="{waste_items>/newWasteItem/weight}" class="sapUiSmallMarginEnd" required="true" placeholder="{i18n>inputWasteWeightPlaceholder}" width="16em" />
					<Select id="selectWasteType" selectedKey="{waste_items>/newWasteItem/type}" forceSelection="true" items="{
											path: 'waste_types>/wasteTypes',
											sorter: { path: 'key' }
										}" class="sapUiSmallMarginEnd">
						<core:Item key="{waste_types>key}" text="{path: 'waste_types>key', formatter: '._geti18nValue'}" />
					</Select>
					<Button text="{i18n>addWasteButton}" press=".addWaste" />
				</layout:HorizontalLayout>
			</f:DynamicPageHeader>
		</f:header>
		<f:content>
			<layout:VerticalLayout class="sapUiResponsiveContentPadding" width="100%">
				<OverflowToolbar id="mainToolbar">
					<Label text="{i18n>toolBarTitle}" />
					<ToolbarSpacer />
					<Button icon="sap-icon://bar-chart" tooltip="{i18n>ttpBarChart}" type="Transparent" />
					<Button icon="sap-icon://donut-chart" tooltip="{i18n>ttpDonutChart}" type="Transparent" />
					<Button icon="sap-icon://chart-table-view" tooltip="{i18n>ttpChartTable}" type="Transparent" />
					<Button icon="sap-icon://table-view" tooltip="{i18n>ttpTable}" type="Transparent" />
				</OverflowToolbar>
				<core:HTML content="&lt;canvas id=&quot;barChart&quot; width=&quot;800&quot; height=&quot;650&quot;&gt;&lt;/canvas&gt;"></core:HTML>
				<PullToRefresh id="pullToRefresh" visible="{device>/isTouch}" refresh="handleRefresh" />
				<Table id="idWasteItemsTable" inset="false" mode="Delete" delete="handleDelete" enableBusyIndicator="true" items="{
						path: 'waste_items>/wasteItems',
						sorter: {
							path: 'date'
						}
					}" swipe="handleSwipe">
					<columns>
						<Column>
							<Text text="{i18n>rowType}" />
						</Column>
						<Column>
							<Text text="{i18n>rowWeight}" />
						</Column>
						<Column>
							<Text text="{i18n>rowDate}" />
						</Column>
					</columns>
					<items>
						<ColumnListItem>
							<cells>
								<Text text="{ path: 'waste_items>type', formatter: '._geti18nValue' }" />
								<Text text="{waste_items>weight}" />
								<Text text="{
									path: 'waste_items>date',
									type: 'sap.ui.model.type.DateTime',
									formatOptions: { 
										style : 'medium',
										source: {pattern: 'timestamp'}
									}
							}" />
							</cells>
						</ColumnListItem>
					</items>
					<swipeContent>
						<Button press="handleReject" />
					</swipeContent>
				</Table>
			</layout:VerticalLayout>
		</f:content>
	</f:DynamicPage>
</mvc:View>