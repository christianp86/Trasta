<mvc:View controllerName="com.fidschenberger.wasteStatsApp.controller.Home" displayBlock="true" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.f" xmlns:layout="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc">
	<f:DynamicPage id="dynamicPageId" preserveHeaderStateOnScroll="true" headerExpanded="true">
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="{i18n>title}" />
				</f:heading>
				<f:expandedContent>
					<Label text="{i18n>appDescription}" />
				</f:expandedContent>
				<f:snappedContent>
					<Label text="{i18n>appDescription}" />
				</f:snappedContent>
				<f:snappedTitleOnMobile>
					<Title text="{i18n>title}" />
				</f:snappedTitleOnMobile>
				<f:content>
					<OverflowToolbar>
						<GenericTag text="{i18n>totalWaste}" status="Warning" press="onGenericTagPress" design="StatusIconHidden">
							<ObjectNumber number="{waste_statistics>/totalWaste}" numberUnit="KG" emphasized="false" state="Warning" />
						</GenericTag>
					</OverflowToolbar>
				</f:content>
				<!-- <f:actions>
					<ToolbarSpacer />
					<Button text="Edit" type="Emphasized" />
					<Button text="Delete" type="Transparent" />
					<Button text="Copy" type="Transparent" />
					<Button icon="sap-icon://action" type="Transparent" />
				</f:actions> -->
			</f:DynamicPageTitle>
		</f:title>
		<!-- DynamicPage Header -->
		<f:header>
			<f:DynamicPageHeader pinnable="true">
				<FlexBox alignItems="Start" justifyContent="SpaceBetween">
					<items>
						<Panel backgroundDesign="Transparent" class="sapUiNoContentPadding">
							<content>
								<layout:HorizontalLayout allowWrapping="true" class="sapUiContentPadding">
									<Input id="inputWasteWeight" type="Number" value="{waste_items>/newWasteItem/weight}" class="sapUiSmallMarginEnd" required="true" placeholder="{i18n>inputWasteWeightPlaceholder}" />
									<Select id="selectWasteType" selectedKey="{waste_items>/newWasteItem/type}" forceSelection="true" items="{
											path: 'waste_types>/wasteTypes',
											sorter: { path: 'key' }
										}" class="sapUiSmallMarginEnd">
										<core:Item key="{waste_types>key}" text="{path: 'waste_types>key', formatter: '._geti18nValue'}" />
									</Select>
									<Button text="{i18n>addWasteButton}" press=".addWaste" />
								</layout:HorizontalLayout>
							</content>
						</Panel>
					</items>
				</FlexBox>
			</f:DynamicPageHeader>
		</f:header>
		<f:content>
			<layout:VerticalLayout class="sapUiContentPadding" width="100%">

				<core:HTML content="&lt;canvas id=&quot;barChart&quot; width=&quot;800&quot; height=&quot;650&quot;&gt;&lt;/canvas&gt;"></core:HTML>
				<Table id="idWasteItemsTable" inset="false" items="{
						path: 'waste_items>/wasteItems',
						sorter: {
							path: 'date'
						}
					}">
					<columns>
						<Column>
							<Text text="Type" />
						</Column>
						<Column>
							<Text text="Weight" />
						</Column>
						<Column>
							<Text text="Date added" />
						</Column>
					</columns>
					<items>
						<ColumnListItem>
							<cells>
								<Text text="{ path: 'waste_items>type', formatter: '._geti18nValue' }" />
								<Text text="{waste_items>weight}" />
								<Text text="{
									path: 'waste_items>date',
									type: 'sap.ui.model.type.DateTime',
									formatOptions: { 
										style : 'medium',
										source: {pattern: 'timestamp'}
									}
							}" />
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</layout:VerticalLayout>
		</f:content>
	</f:DynamicPage>
</mvc:View>